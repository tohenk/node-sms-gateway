<% script.create('JQuery')
  .add(`
$.plugin = {
    handle: function(clicker) {
        var self = this;
        var icon = clicker.find('.icon').attr('class');
        self.container.find('.message .header').html(clicker.text());
        self.container.find('.message .icon').attr('class', '').addClass(icon);
        self.container.find('.message .content p').html(clicker.attr('data-desc'));
        $.get('/p/PLUGIN'.replace(/PLUGIN/, clicker.attr('data-plugin')))
            .then(function(html) {
                self.container.find('.plugin-content').html(html);
            })
        ;
    },
    init: function() {
        var self = this;
        self.container = $('.plugin-container');
    }
}
`); %>
